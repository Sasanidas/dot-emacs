# -*- mode: snippet -*-
# name: common copy constructor and assignment
# key: copy_constructor
# --
$1::${1:$(simplify-nested-name yas-text)}(const $1 &other)
{
    (*this) = other;
}
$1& $1::operator()(const $1 &other)
{
    if (this != &other)
    {
        memcpy(this, &other, sizeof(*this));
    }

    return *this;
}